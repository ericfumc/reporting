{
  "templateName": "Resection Specimens from Patients with Ductal Carcinoma In Situ",
  "categories": [
    {
      "name": "SPECIMEN",
      "fields": [
        { "label": "Procedure", "type": "select", "options": ["Excision", "Total mastectomy", "Other (specify):"] },
        { "label": "Specimen Laterality", "type": "select", "options": ["Right", "Left","Not specified"] }
      ]
    },
    {
      "name": "TUMOR",
      "fields": [
        { "label": "Tumor Site", "type": "text" },
        { "label": "Histologic Type", "type": "select", "options": ["Ductal carcinoma in situ", "Paget disease","Encapsulated papillary carcinoma without invasive carcinoma","Solid papillary carcinoma without invasive carcinoma"] },
        { "label": "Size of DCIS", "type": "text" },
        { "label": "Architectural Patterns", "type": "text" },
        { "label": "Nuclear Grade", "type": "select", "options": ["Grade I (low)", "Grade II (intermediate)","Grade III (high)"] },
        { "label": "Necrosis", "type": "select", "options": ["Not identified", "Present, focal (small foci or single cell necrosis)","Present, central (expansive comedo necrosis)"] },
        { "label": "Microcalcifications", "type": "select", "options": ["Not identified", "Present in DCIS","Present in nonneoplastic tissue"] }
      ]
    },
    {
      "name": "MARGINS",
      "fields": [
        { "label": "Margin Status", "type": "select", "options": ["All margins negative for DCIS", "DCIS present at margin"] },
        { "label": "%x20%x20Margin Clearance", "type": "text" },
        { "label": "Margin involved by DCIS", "type": "text" }
      ]
    }
  ]
}
